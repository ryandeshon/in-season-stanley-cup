{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-essential",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "parser": "@babel/eslint-parser"
  },
 "rules": {
    "indent": ["error", 2], // Enforces 2-space indentation
    "space-in-parens": ["error", "always"], // Requires spaces inside parentheses
    "array-bracket-spacing": ["error", "always"], // Requires spaces inside array brackets
    "object-curly-spacing": ["error", "always"], // Requires spaces inside curly braces
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "useTabs": false
      }
    ]
  }
}
